# GEMP Analytics Configuration
# Copy this file to .env and fill in values

# Analytics API port (external)
ANALYTICS_PORT=8001

# Path to replay folder (relative to docker/ directory)
# Adjust based on your directory structure
# Summary files expected at: {REPLAY_PATH}/summaries/YYYY/MM/*.json
GEMP_REPLAY_PATH=../../gemp/replay

# Blueprint mapping file for promo/alt-art normalization
GEMP_MAPPING_FILE=../../gemp/gemp-lotr/gemp-lotr-cards/src/main/resources/blueprintMapping.txt

# Database connection (same as GEMP)
GEMP_DB_HOST=172.28.1.3
GEMP_DB_PORT=3306
GEMP_DB_USER=gempuser
GEMP_DB_PASSWORD=gemppassword
GEMP_DB_NAME=gemp_db

# Admin API key for protected endpoints
# Generate with: openssl rand -hex 32
ANALYTICS_ADMIN_KEY=change_me_to_random_string
